  <div class = "modal-header">
    범주 : <%=rows[0].choice%><br>
    작성자 : <%=rows[0].writer_name%><br>
    날짜 : <%=rows[0].date%><br>
    글제목 : <%=rows[0].title%>
      <button type = "button" class = "close" data-dismiss="modal" aria-label = "Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class= "modal-body">
      <textarea row= "5" cols= "50" readonly class="form-control">
        <%=rows[0].text%>
      </textarea>

    </div>
    <div class = "modal-footer">
      <button type = "button" class = "btn btn-default" data-dismiss = "modal" id="Closebtn"> Close </button>
      <button type = "button"  href = "/first_test/boardsendmail/<%=rows[0].id%>" id="sendmailbtn" data-toggle="modal" data-target="#board_send_mail_modal<%=rows[0].id%>" class= "btn btn-primary"> 쪽지보내기 </button>
    </div>

    <div class = "modal" id= "board_send_mail_modal<%=rows[0].id%>" tabindex="-1" data-focus-on="input:first">
      <div class = "modal-dialog">
        <div class = "modal-content">

        </div>
      </div>
    </div>


    <script>
    $('#sendmailbtn').click('show.bs.modal',function(event){
      $('#board_send_mail_modal<%=rows[0].id%>').modal({
        remote : '/first_test/boardsendmail/<%=rows[0].id%>'
      });
    });
    $('#board_send_mail_modal<%=rows[0].id%>').on('loaded.bs.modal',function(event){
    $('#board_send_mail_modal<%=rows[0].id%>').modal('show');
    });
    $('#board_send_mail_modal<%=rows[0].id%>').on('hidden.bs.modal', function () {
      $(this).removeData('bs.modal');
    });

    </script>
